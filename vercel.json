{
  "version": 2,
  "installCommand": "pip install --upgrade pip && pip install -r requirements.txt",
  "builds": [
    {
      "src": "app.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb"
      }
    }
  ],
  "functions": {
    "app.py": {
      "runtime": "python3.11"
    }
  },
  "routes": [
    {
      "src": "/(.*)",
      "dest": "app.py"
    }
  ],
  "env": {
    "PYTHONPATH": ".",
    "MATPLOTLIB_USE": "Agg"
  }
}
